{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "@cuiqg/typescript-config",
  "version": "0.0.0",
  "main": "./tsconfig.json",
  "type": "module",
  "repository": "github:cuiqg/typescript-config",
  "scripts": {
    "release": "pnpm release:check && bumpp && pnpm publish",
    "release:check": "pnpm test",
    "test": "pnpm run /^test:/",
    "test:format": "prettier --write \"**/*.{ts,json}\"",
    "test:packages": "pnpm dedupe --check",
    "test:types": "tsc --noEmit --pretty"
  },
  "devDependencies": {
    "@cuiqg/prettier-config": "^1.1.13",
    "@types/node": "^24.2.0",
    "bumpp": "^10.2.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "typescript": "^5.8.0"
  },
  "prettier": "@cuiqg/prettier-config"
}
